{
    "env": {
        "browser": true,
        "es2021": true
    },
    "rules": {
        "indent": ["error", 4],
        "space-infix-ops": ["error", { "int32Hint": false }],
        "quotes": ["error", "single"],
        "no-var": "error",
        "prefer-const": "error",
        "eqeqeq": ["error", "smart"],
        "no-console": "error",
        "no-cond-assign": "error",
        "no-extra-semi": "error",
        "no-inline-comments": "error",
        "no-else-return": "error",
        "curly": "error"

    }

}
